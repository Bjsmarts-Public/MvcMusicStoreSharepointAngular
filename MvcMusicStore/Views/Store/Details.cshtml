@model MvcMusicStore.Models.Album

@{
    ViewBag.Title = "Album - " + Model.Title;
}
@{
    Layout = null;
}

<!DOCTYPEhtml>

<html>
<head>
<meta name="viewport"content="width=device-width"/>
<title>Details</title>
</head>
<body>
    <div style="width:700px">
        <h2>@Model.Title</h2>

        <p>
            <img alt="@Model.Title"src="@Model.AlbumArtUrl"/>
        </p>
        <div id="album-details">
            <p>
                <em>Genre:</em>@Model.Genre.Name
            </p>
            <p>
                <em>Artist:</em>@Model.Artist.Name
            </p>
            <p>
                <em>Price:</em>@String.Format("{0:F}", Model.Price)
            </p>
            <p class="button">
                <a id="link-1" href ng-click="addToCard('@Model.AlbumId')">Add to cart</a>
            </p>
        </div>
    </div>
</body>

</html>
